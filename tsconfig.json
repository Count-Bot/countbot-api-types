{
  "compilerOptions": {
    "target": "ES2022",
    "lib": [
      "ESNext",
    ],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "declaration": true,
    "strict": true,
    "noImplicitReturns": true,
    "baseUrl": ".",
    "outDir": "./build",
  },
  "include": [
    "payloads/**/*.ts",
    "rest/**/*.ts",
    "src/utils/**/*.ts",
    "src/index.ts"
  ],
}