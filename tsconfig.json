{
  "compilerOptions": {
    "target": "ES2022",
    "lib": [
      "ESNext",
    ],
    "module": "CommonJS",
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "declaration": true,
    "strictFunctionTypes": true,
    "outDir": "./build",
    "baseUrl": "./src/",
    "rootDir": "./src/",
    "sourceMap": true,
    "skipLibCheck": true
  },
  "include": [
    "./src/"
  ],
}